<html lang="en">
  <head>
    <link rel="stylesheet" href="public/stylesheets/styles.css" />
    <!-- ... meta tags, title, styles ... -->
  </head>
  <body>

    <!-- Header -->
    <header>
      <h1>AITY-THREE | ISSA B</h1>
      <p>An anonymous course review site.</p>
    </header>

    <!-- Navigation Links -->
    <nav>
      <a href="/reviews">All Reviews</a>
      <a href="/myreviews">My Reviews</a>
      <a href="/addreview">Add Review!</a>
    </nav>

    <!-- Filters -->
    <section id="filters">
      <label for="semester">Semester:</label>
      <select id="semester" name="semester">
        <!-- ... options for semesters ... -->
      </select>

      <label for="year">Year:</label>
      <input type="text" id="year" name="year" />

      <label for="professor">Professor:</label>
      <input type="text" id="professor" name="professor" />

      <button>Filter</button>
    </section>

    <!-- Reviews Table -->
    <table>
      <thead>
        <tr>
          <th>Course Number</th>
          <th>Course Name</th>
          <th>Semester</th>
          <th>Year</th>
          <th>Professor</th>
          <th>Review</th>
        </tr>
      </thead>
      <tbody>
        {{#each reviews}}
          <tr>
            <td>{{this.courseNumber}}</td>
            <td>{{this.courseName}}</td>
            <td>{{this.semester}}</td>
            <td>{{this.year}}</td>
            <td>{{this.professor}}</td>
            <td>{{this.review}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <!-- Footer/Status Bar -->
    <footer>
      Your session's total page visits:
      {{sessionVisits}}
    </footer>

  </body>
</html>